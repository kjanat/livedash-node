# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.{css,scss,sass}]
indent_size = 4
indent_style = space

[*.{ps1,psm1}]
indent_size = 4
indent_style = tab

[*.{json,yaml,yml}]
indent_size = 2
indent_style = space

[*.{js,ts,jsx,tsx}]
indent_size = 2
indent_style = space

[*.{html,htm}]
indent_size = 4
indent_style = space
